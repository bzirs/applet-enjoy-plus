<view class="profile">
  <van-cell center title="头像">
    <van-icon slot="right-icon" name="arrow" size="16" color="#c3c3c5" />
    <button class="button" size="mini" hover-class="none" open-type="chooseAvatar" bind:chooseavatar="handleAvatarChange">
      <image class="avatar" src="{{avatar}}"></image>
    </button>
  </van-cell>
  <van-field model:value="{{nickName}}" bind:change="handleNameChange" bind:blur="handleUpdateName" center label="昵称" input-align="right" type="nickname" placeholder="请输入昵称" />
</view>